<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.allensun.progressbutton.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:layout_gravity="center">

        <com.example.progessbuttonlib.ProgressView
            android:id="@+id/ProgressView"
            android:layout_width="300dp"
            android:layout_height="40dp"
            app:buttonText="Download"
            app:buttonColor= "@color/gray"
            android:layout_margin="10dp" />

        <com.example.progessbuttonlib.ProgressView
            android:id="@+id/ProgressView_1"
            android:layout_width="300dp"
            android:layout_height="40dp"
            app:buttonColor= "@color/purple"
            app:buttonText="Download"
            android:layout_margin="10dp" />


        <com.example.progessbuttonlib.ProgressView
            android:id="@+id/ProgressView_2"
            android:layout_width="300dp"
            android:layout_height="40dp"
            app:buttonColor= "@color/green"
            app:buttonText="Download"
            android:layout_margin="10dp" />

        <com.example.progessbuttonlib.ProgressView
            android:id="@+id/ProgressView_3"
            android:layout_width="300dp"
            android:layout_height="40dp"
            app:buttonColor= "@color/colorAccent"
            app:buttonText="Download"
            android:layout_margin="10dp" />

        <com.example.progessbuttonlib.ProgressView
            android:id="@+id/ProgressView_4"
            android:layout_width="300dp"
            android:layout_height="40dp"
            app:buttonText="Download"
            android:layout_margin="10dp" />
    </LinearLayout>
</FrameLayout>
